<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cl.dao.MeishixinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.cl.entity.MeishixinxiEntity" id="meishixinxiMap">
        <result property="caipinmingcheng" column="caipinmingcheng"/>
        <result property="caipintupian" column="caipintupian"/>
        <result property="caipinleixing" column="caipinleixing"/>
        <result property="caipinxiangqing" column="caipinxiangqing"/>
        <result property="kouwei" column="kouwei"/>
        <result property="tuijianzhishu" column="tuijianzhishu"/>
        <result property="clicktime" column="clicktime"/>
        <result property="onelimittimes" column="onelimittimes"/>
        <result property="alllimittimes" column="alllimittimes"/>
        <result property="price" column="price"/>
        <result property="storeupNumber" column="storeup_number"/>
        <result property="discussNumber" column="discuss_number"/>
        <result property="yuangongzhanghao" column="yuangongzhanghao"/>
        <result property="yuangongmingcheng" column="yuangongmingcheng"/>
    </resultMap>

    <select id="selectListView"
		resultType="com.cl.entity.view.MeishixinxiView" >

		SELECT  meishixinxi.* FROM meishixinxi  meishixinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.cl.entity.view.MeishixinxiView" >
		SELECT * FROM meishixinxi  meishixinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>



    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, ROUND(sum(${params.yColumn}),1) total FROM meishixinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
        limit 12
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM meishixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM meishixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM meishixinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>

    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM meishixinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
        limit 10
    </select>



</mapper>
